<Window x:Class="Lab5B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5B"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBox Name="textBoxCountFloors" Grid.Column="1" Grid.Row="1" KeyDown="TextBoxCountFloors_KeyDown" TextChanged="TextBoxCountFloors_TextChanged"/>
            <Button Name="buttonUpdateBuilding" Grid.Column="1" Grid.Row="3" Content="Обновить здание" Click="ButtonUpdateBuilding_Click"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Name="labelCountFloors" Grid.Row="1" Content="Этажей: 2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="91" Margin="14,0,0,0" Grid.ColumnSpan="2"/>
            <Label Name="labelStatusElevator" Grid.Column="2" Grid.Row="1" Content="Состояние лифта: закрыт" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Width="171"/>
            <Label Name="labelNowFloor" Grid.Column="4" Grid.Row="1" Content="Текущий этаж: 1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="143" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Name="labelNameListBox" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Content="Этажи:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ListBox Name="listBoxSelectedFloor" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" SelectionChanged="ListBoxSelectedFloor_SelectionChanged"/>
            <Button Name="buttonGoTo" Grid.Column="1" Grid.Row="5" Content="Выбрать" Click="ButtonGoTo_Click"/>
            <Button Name="buttonOpenDoor" Grid.Column="1" Grid.Row="7" Content="Открыть двери" Click="ButtonOpenDoor_Click"/>
            <Button Name="buttonCloseDoor" Grid.Column="3" Grid.Row="7" Content="Закрыть двери" Click="ButtonCloseDoor_Click"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Label Name="labelNameHistory" Grid.Row="1" Grid.Column="1" Content="История событий:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <ListBox Name="listBoxHistory" Grid.Row="3" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>
</Window>

