<Window x:Class="Laba14_B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba14_B"
        mc:Ignorable="d"
        Title="Laba14_B" Height="500" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Name="btnSelect" Grid.Column="0" Content="Выбрать файл" Click="BtnSelect_Click"/>
            <Button Name="btnSave" Grid.Column="1" Content="Сохранить файл" Click="BtnSave_Click"/>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <TreeView Name="treeView"/>
        </ScrollViewer>
        <DataGrid Name="dataGridAttributes" Grid.Row="1" Grid.Column="1" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding Path=Data}" AutoGenerateColumns="False" CellEditEnding="CellEditEnding" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Country}" Header="Страна" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Binding="{Binding Capital}" Header="Столица" IsReadOnly="False" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
