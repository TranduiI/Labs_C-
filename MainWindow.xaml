        <Label Content="" HorizontalAlignment="Left" Margin="131,349,0,0" VerticalAlignment="Top"/>
        <Label Name="labelRadius" Content="Radius:" HorizontalAlignment="Left" Margin="45,140,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBoxRadius" HorizontalAlignment="Left" Margin="95,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.551,-0.594" TextChanged="TextBoxRadius_TextChanged"/>
        <Label Name="labelSide" Content="Side 1:" HorizontalAlignment="Left" Margin="45,171,0,0" VerticalAlignment="Top"/>
