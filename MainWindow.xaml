<Window x:Class="Laba13_C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba13_C" d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        mc:Ignorable="d"
        Title="Laba13_C" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Column="0" Grid.Row="1" Margin="40" ItemsSource ="{Binding Deps}" SelectedItem="{Binding DepItem}" VerticalAlignment="Center" DisplayMemberPath ="DepName"/>
        <ListBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding DepItem.Employees}" DisplayMemberPath="EmplName"/>

    </Grid>
</Window>
