<Window x:Class="Laba18_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba18_Client"
        mc:Ignorable="d"
        Title="Laba18_Client" Height="300" Width="500">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height= "1*"/>
            <RowDefinition Height = "4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="MessageText" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="350"/>
        <Button Content="Отправить" Grid.Column="1" Grid.Row="0" Click="SendBtn_Click" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="65" Height="23"/>
        <TextBox Name="ServerResponseBox" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="180"  TextWrapping="Wrap" VerticalAlignment="Center" Width="440"/>
    </Grid>
</Window>

