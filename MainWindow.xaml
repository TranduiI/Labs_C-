<Window x:Class="Laba13_A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba13_A"
        mc:Ignorable="d"
        Title="Laba13_A" Height="450" Width="800">
    <Window.Resources>
        <local:DateMultiValueConverter x:Key="DateConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="День:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
        <Label Grid.Row="0" Grid.Column="2" Content="Месяц:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
        <Label Grid.Row="0" Grid.Column="3" Content="Год:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28"/>
        <TextBox Name="textBoxDay" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="24" Height="40" PreviewTextInput ="TextBoxNumberOnly"/>
        <TextBox Name="textBoxMonth" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" FontSize="24" Height="40" PreviewTextInput ="TextBoxNumberOnly"/>
        <TextBox Name="textBoxYear" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" FontSize="24" Height="40" PreviewTextInput ="TextBoxNumberOnly"/>
        <TextBox Name="textBoxDate" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" Height="40" PreviewTextInput="TextBoxNumberOnly">
            <TextBox.Text>
                <MultiBinding Converter="{StaticResource DateConverter}">
                    <Binding ElementName="textBoxDay" Path="Text"/>
                    <Binding ElementName="textBoxMonth" Path="Text"/>
                    <Binding ElementName="textBoxYear" Path="Text"/>
                </MultiBinding>
            </TextBox.Text>
        </TextBox>
            
        
        
    </Grid>
</Window>
