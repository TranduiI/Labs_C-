<Window x:Class="Laba14_A.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba14_A"
        mc:Ignorable="d"
        Title="Laba14_A" Height="450" Width="800">
    <Window.Resources>
        <XmlDataProvider x:Key="rssData" Source="https://www.playground.ru/rss/news.xml" XPath="//item"/>
    </Window.Resources>
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ListBox Name="lb1" Grid.Row="1" Grid.ColumnSpan="4" Margin="5" ItemsSource="{Binding Source={StaticResource rssData}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1" BorderBrush="black">
                            <TextBlock  Text="{Binding XPath=title}"/>
                        </Border>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Margin="10" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" Orientation="Vertical" DataContext="{Binding ElementName=list, Path=SelectedItem}">
            <TextBlock Text ="{Binding XPath=description}" TextWrapping="Wrap"/>
            <TextBlock Text="{Binding XPath=pubDate}"/>
            <TextBlock>
                <Hyperlink Name="ToNews" Tag="{Binding XPath=link, Path=InnerText}" Click="ToNews_Click" Cursor="Hand" >
                    Перейти к новости...    
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>