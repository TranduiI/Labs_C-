<Window x:Class="Laba18_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba18_Server"
        mc:Ignorable="d"
        Title="Laba18_Server" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Запустить сервер" Click="StartServer" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35"/>
        <Button Grid.Column="1" Grid.Row="0" Content="Остановить сервер" Click="StopServer" HorizontalAlignment="Center" VerticalAlignment="Center" Height="35"/>
        <TextBox Name="ServerLog" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="340"/>
    </Grid>
</Window>
