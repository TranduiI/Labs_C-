<Window x:Class="Laba14_C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba14_C"
        xmlns:chart="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=DotNetProjects.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="Laba14_C" Height="500" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ListBox Name="listBoxValute" Grid.RowSpan="3" ItemsSource="{Binding Path=Valutes}" SelectionChanged="LbV_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1"  VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.ColumnSpan="9" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12">Диаграмма</Label>
                <RadioButton Name="radioButtonPie" Content="Круговая" IsChecked="True" Grid.Column="0" Grid.Row="1"/>
                <RadioButton Name="radioButtonArea" Content="Области"  Grid.Column="2" Grid.Row="1"/>
                <RadioButton Name="radioButtonBar" Content="Гистограмма"  Grid.Column="4" Grid.Row="1"/>
                <RadioButton Name="radioButtonLine" Content="Линейная"  Grid.Column="6" Grid.Row="1"/>
                <RadioButton Name="radioButtonColumn" Content="Столбчатая"  Grid.Column="8" Grid.Row="1"/>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Calendar Name="calendar" SelectionMode="MultipleRange" SelectedDatesChanged="Calendar_ChangedDate"/>
            <Button Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Показать данные" Click="Button_Click" Name="buttonShow"/>
        </Grid>
        <chart:Chart Grid.Row="2" Grid.Column="1" Name="chart"/>
    </Grid>
</Window>
